rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all direct access
    // This app uses Firebase Admin SDK from the backend, which bypasses these rules
    // These rules are a safety net in case the database is ever accessed directly
    
    // Users collection
    match /users/{userId} {
      // Deny all direct access - only allow via Admin SDK (backend)
      allow read, write: if false;
      
      // Booking history subcollection
      match /bookingHistory/{bookingId} {
        allow read, write: if false;
      }
    }
    
    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

